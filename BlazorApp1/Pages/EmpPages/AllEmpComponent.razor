@page "/Emps"
<PageTitle>All Employees</PageTitle>

<h3>AllEmpComponent</h3>
@if (Employees != null)
{
    <table class="table table-bordered table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Employees)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td><a href="/Emps/Details/@item.Id">Details</a></td>
                <td><a href="/Emps/Edit/@item.Id">Edit</a></td>
            </tr>
        }
    </table>
}
else
{
    <h1>Wait ....</h1>
}

@code {
    [Inject]
    public IServices<Employee> EmpService { get; set; }

    public List<Employee> Employees { get; set; }

    protected override void OnInitialized()
    {
        Employees=EmpService.GetAll();
        base.OnInitialized();
    }
}
